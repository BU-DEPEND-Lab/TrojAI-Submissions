Bootstrap: docker
From: pytorch/pytorch:1.13.1-cuda11.6-cudnn8-runtime

%files
    ./archs.py /
    ./trojan_detector.py /
    ./feature_extractor.py /
    ./entrypoint.py /
    ./utils /
    ./metaparameters.json /
    ./metaparameters_schema.json /
    ./learned_parameters /

%post
    apt update

    pip install --upgrade pip
    pip install tqdm jsonschema jsonargparse scikit-learn xgboost pandas

%runscript
    exec python3 /entrypoint.py "$@"
